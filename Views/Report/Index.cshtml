<div class="row">
    <div class="col-xs-12">
        <table style="border:none;">
            <tr>
                <td>
                    <label>Customer :&nbsp;</label>
                </td>
                <td>
                    @Html.DropDownListFor(x => x.Customer, Model.Customers, "--Select Customer--", new { @class = "form-control", style = "display:inline;" })
                </td>

                <td>
                    <label>Size :&nbsp;</label>
                </td>
                <td>
                    @Html.EditorFor(x => x.Size, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    <label>Schedule :&nbsp;</label>
                </td>
                <td>
                    @Html.EditorFor(x => x.Schedule, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
        </table>
    </div>
</div>
